# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Settings
DATABASE_URL=postgres://medic_db:publichealth@db:5432/medic_db

# Email Settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=no-reply@example.com

# Payment Provider Settings
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_WEBHOOK_SECRET=your-paystack-webhook-secret
PAYSTACK_CALLBACK_URL=http://localhost:8000/api/payment/callback/

# Security Settings
SECURITY_TEAM_EMAIL=security@yourdomain.com

# Twilio Settings (for SMS and WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number

# Redis Cache URL (already configured in docker-compose)
REDIS_URL=redis://redis:6379/1
